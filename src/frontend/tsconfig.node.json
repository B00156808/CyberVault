{
  "compilerOptions": {
    "module": "ESNext",  // Use ESNext for module resolution
    "target": "ESNext",  // Ensure modern JavaScript syntax
    "lib": ["ESNext", "DOM"],  // Support both DOM and modern JavaScript
    "composite": true,  // Ensure this is true when referenced by other projects
    "esModuleInterop": true,  // Allows compatibility with CommonJS modules
    "moduleResolution": "Node",  // Helps with module resolution
    "strict": true,  // Enable all strict type-checking options
    "skipLibCheck": true,  // Skip checking of declaration files for faster compilation
    "resolveJsonModule": true  // Allows importing of JSON files directly
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],  // Include all TypeScript files
  "exclude": ["node_modules"]  // Exclude node_modules from compilation
}

{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // Ensures that TypeScript uses ES Modules
    "moduleResolution": "Node", // Resolves module paths like Node.js
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true, 
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "outDir": "dist-electron",
    "jsx": "react-jsx",
    "composite": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
